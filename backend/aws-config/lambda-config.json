{
  "FunctionName": "freehold-api",
  "Runtime": "nodejs18.x",
  "Handler": "index.handler",
  "Timeout": 30,
  "MemorySize": 512,
  "Environment": {
    "Variables": {
      "NODE_ENV": "production",
      "APP_NAME": "Freehold Document Sharing API",
      "VERSION": "1.0.0",
      "JWT_SECRET": "your-super-secret-jwt-key-change-this-in-production-min-32-chars",
      "JWT_REFRESH_SECRET": "your-super-secret-refresh-key-change-this-in-production-min-32-chars",
      "JWT_EXPIRES_IN": "1h",
      "JWT_REFRESH_EXPIRES_IN": "7d",
      "AWS_REGION": "us-east-1",
      "S3_BUCKET_NAME": "freehold-documents-your-unique-id",
      "DB_HOST": "your-rds-endpoint.region.rds.amazonaws.com",
      "DB_PORT": "5432",
      "DB_NAME": "freehold_docs",
      "DB_USER": "postgres",
      "DB_PASSWORD": "your-secure-database-password",
      "CORS_ORIGIN": "https://main.amplifyapp.com,https://your-custom-domain.com",
      "CORS_CREDENTIALS": "true",
      "MAX_FILE_SIZE": "52428800",
      "ALLOWED_FILE_TYPES": "pdf,doc,docx,txt,jpg,jpeg,png,gif",
      "LOG_LEVEL": "info",
      "LOG_FORMAT": "json",
      "RATE_LIMIT_WINDOW_MS": "900000",
      "RATE_LIMIT_MAX_REQUESTS": "100",
      "BCRYPT_ROUNDS": "12",
      "SESSION_TIMEOUT": "3600000",
      "API_VERSION": "v1",
      "API_PREFIX": "/api"
    }
  }
}