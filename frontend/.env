# Production Environment Configuration for Frontend
# Update VITE_API_BASE_URL with your actual API Gateway URL after deployment

# API Configuration - REPLACE WITH YOUR API GATEWAY URL
VITE_API_BASE_URL=https://wdjv9gq946.execute-api.eu-west-2.amazonaws.com/prod

# Application Configuration
VITE_APP_NAME=Freehold Document Sharing
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Secure document sharing platform for freehold communities

# File Upload Configuration
VITE_MAX_FILE_SIZE=52428800
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx,txt,jpg,jpeg,png,gif
VITE_MAX_FILES_PER_UPLOAD=10

# UI Configuration
VITE_ITEMS_PER_PAGE=20
VITE_SEARCH_DEBOUNCE_MS=300
VITE_UPLOAD_TIMEOUT_MS=300000

# Feature Flags
VITE_ENABLE_FILE_PREVIEW=true
VITE_ENABLE_DRAG_DROP=true
VITE_ENABLE_BULK_UPLOAD=true
VITE_ENABLE_CATEGORIES=true

# Security Configuration
VITE_SESSION_TIMEOUT_MS=3600000
VITE_TOKEN_REFRESH_THRESHOLD_MS=300000

# Analytics and Monitoring (Optional)
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ID=

# Environment
NODE_ENV=production